# NIST Compliance Workflow Environment Variables
# Copy this file to .env and fill in your actual values

# Required: OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
GITHUB_TOKEN=your_github_token_here
GITHUB_REPO=Yeswanth2878/nist-compliance-reports

# Optional: Google Custom Search (for enhanced search capabilities
GOOGLE_API_KEY=your_google_api_key_here
SEARCH_ENGINE_ID=933ef038d2c96438c

# Optional: Application Configuration
LOG_LEVEL=INFO
MAX_ARTICLES_DEFAULT=10
SERVER_PORT=8000

# Optional: Database Configuration (for future enhancements)
POSTGRES_PASSWORD=secure_password_here
